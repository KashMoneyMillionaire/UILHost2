                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Meet Manager</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Hosted Meets", MVC.Meet.Hosted())</li>
                                <li>@Html.ActionLink("Participating Meets", MVC.Meet.Participating())</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Student Manager</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("My Students", MVC.Student.List())</li>
                            </ul>
                        </li>
                        @if (Html.HasPermission())
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Teacher Manager</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("My Students", MVC.Student.List())</li>
                                </ul>
                            </li>
                        }
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="jumbotron"></div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
